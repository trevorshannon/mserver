<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <!-- main content -->
	<RelativeLayout
	    android:id="@+id/main_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:padding="0dp" >
	
	    <!-- music content -->
	     <FrameLayout
	         android:id="@+id/music_content"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:paddingBottom="52dp"
	         android:background="@color/light_grey">
	         
	     </FrameLayout>
	    
	    <!-- footer -->	    
	    <LinearLayout 
	        android:id="@+id/footer_layout"
	        android:layout_width="match_parent"
	        android:layout_height="52dp"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true"
	        android:background="@color/light_grey"
	        android:gravity="center_vertical"
	        android:padding="0dp" >
		    
	        <RelativeLayout
	            android:id="@+id/nowplaying_layout"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:padding="4dp"
	            android:gravity="left"
	            android:layout_weight="1">
	        
		        <TextView
			        android:id="@+id/nowplaying_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="16sp"
			        android:singleLine="true"
			        android:ellipsize="end"/>
		        
		       <TextView
			        android:id="@+id/nowplaying_artist"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="12sp"
			        android:layout_below="@id/nowplaying_title"
			        android:singleLine="true"
			        android:ellipsize="end"/>
		       
		     </RelativeLayout>
		    
	        <LinearLayout
	            android:id="@+id/control_layout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_weight="0"
	            android:padding="4dp">
		       
		        <Button 
			        android:id="@+id/voldown"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="-"
			        android:onClick="voldown"
			        android:visibility="gone"/>
			    
			    <Button 
			        android:id="@+id/volup"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="+"
			        android:onClick="volup"
			        android:visibility="gone"/>
			    
			    <ImageButton 
			        android:id="@+id/prev"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="prev"
			        android:background="@null"
			        android:padding="4dp"
			        android:src="@drawable/ic_action_previous"/>
			    
			    <ImageButton 
			        android:id="@+id/play"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="play"
			        android:background="@null"
			        android:padding="4dp"
			        android:src="@drawable/ic_action_play"/>
			    
			    <ImageButton 
			        android:id="@+id/pause"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="pause"
			        android:background="@null"
			        android:padding="4dp"
			        android:src="@drawable/ic_action_pause"/>
			    
			    <ImageButton 
			        android:id="@+id/next"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="next"
			        android:background="@null"
			        android:padding="4dp"
			        android:src="@drawable/ic_action_next"/>
			</LinearLayout>
		    
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/loading_layout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:visibility="gone"
	        android:background="@color/light_grey">
	        
		    <ProgressBar
		        android:id="@+id/loading_wheel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		    
		    <TextView
		        android:id="@+id/loading_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/loading"
		        android:textColor="@color/light_black"
		        android:textSize="18sp"/>
		    
	    </LinearLayout>
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="52dp"
	        android:id="@+id/connection_status"
	        android:layout_alignParentBottom="true"
	        android:background="@color/light_red"
	        android:gravity="center"
	        android:visibility="invisible"
	        android:onClick="reconnect">
		    
		    <TextView 
		        android:id="@+id/connection_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/light_grey"
	            android:textSize="20sp"
	            android:padding="4dp"/>
		    
		    <ImageView
		        android:id="@+id/connection_refresh"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        android:src="@drawable/ic_action_refresh"
		        android:padding="4dp"
		        android:layout_toRightOf="@id/connection_text"/>
		    
		</RelativeLayout>
	
	</RelativeLayout>
	<!-- side drawer -->
	<ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/light_grey"/>
</android.support.v4.widget.DrawerLayout>
